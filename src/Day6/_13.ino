#include <Keypad.h>


#define LED1 10 // красный светодиод
#define LED2 11 // зеленый светодиод

#define NUM_KEYS 5 // количество знаков в коде

char key;
char myarraw[NUM_KEYS] = { '1', '2', '3', '4', '5'}; // массив с верным кодом
